<?xml version='1.0' encoding='utf-8'?>
<widget id="com.memorygame.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Memory Card Game</name>
    <description>
        Classic memory card game with playing cards. Test your memory skills by matching pairs of cards!
    </description>
    <author email="developer@example.com" href="https://github.com/yourusername/memory-card-game">
        Memory Game Developer
    </author>
    
    <content src="index.html" />
    
    <!-- Allow external resources -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Platform specific settings -->
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- Android specific icons -->
        <icon src="assets/icons/android/ldpi.png" density="ldpi" />
        <icon src="assets/icons/android/mdpi.png" density="mdpi" />
        <icon src="assets/icons/android/hdpi.png" density="hdpi" />
        <icon src="assets/icons/android/xhdpi.png" density="xhdpi" />
        <icon src="assets/icons/android/xxhdpi.png" density="xxhdpi" />
        <icon src="assets/icons/android/xxxhdpi.png" density="xxxhdpi" />
        
        <!-- Android splash screens -->
        <splash src="assets/splash/android/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="assets/splash/android/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="assets/splash/android/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="assets/splash/android/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="assets/splash/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="assets/splash/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="assets/splash/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="assets/splash/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        
        <!-- Android preferences -->
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="Orientation" value="sensor" />
        <preference name="Fullscreen" value="false" />
        <preference name="KeepRunning" value="true" />
        <preference name="LoadingDialog" value="Memory Game" />
        <preference name="LoadingPageDialog" value="Loading..." />
        <preference name="ErrorUrl" value="file:///android_asset/www/error.html" />
        <preference name="BackgroundColor" value="0xff764ba2" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <!-- iOS specific icons -->
        <icon src="assets/icons/ios/icon-57.png" width="57" height="57" />
        <icon src="assets/icons/ios/icon-57-2x.png" width="114" height="114" />
        <icon src="assets/icons/ios/icon-72.png" width="72" height="72" />
        <icon src="assets/icons/ios/icon-72-2x.png" width="144" height="144" />
        <icon src="assets/icons/ios/icon-60.png" width="60" height="60" />
        <icon src="assets/icons/ios/icon-60-2x.png" width="120" height="120" />
        <icon src="assets/icons/ios/icon-60-3x.png" width="180" height="180" />
        <icon src="assets/icons/ios/icon-76.png" width="76" height="76" />
        <icon src="assets/icons/ios/icon-76-2x.png" width="152" height="152" />
        <icon src="assets/icons/ios/icon-40.png" width="40" height="40" />
        <icon src="assets/icons/ios/icon-40-2x.png" width="80" height="80" />
        <icon src="assets/icons/ios/icon-50.png" width="50" height="50" />
        <icon src="assets/icons/ios/icon-50-2x.png" width="100" height="100" />
        
        <!-- iOS splash screens -->
        <splash src="assets/splash/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="assets/splash/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="assets/splash/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="assets/splash/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="assets/splash/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="assets/splash/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="assets/splash/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="assets/splash/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="assets/splash/ios/Default-736h.png" width="1242" height="2208"/>
        
        <!-- iOS preferences -->
        <preference name="Orientation" value="all" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="BackgroundColor" value="0xff764ba2" />
    </platform>
    
    <!-- Global preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xff764ba2" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="Orientation" value="default" />
    <preference name="Fullscreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="500" />
    
    <!-- Content Security Policy -->
    <meta http-equiv="Content-Security-Policy" content="